{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "examples",
    "tests",
    "es"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.tsx"
  ]
}
